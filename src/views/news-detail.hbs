{{#if news}}
<div class="row">
    <div class="col-lg-6">
        <div class="card">
        {{#if news.cover}}
            <img src='http://localhost:3000{{news.cover}}' class="card-img-top" style="height: 200px; object-fit: cover;" alt=''>
        {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{news.title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Автор: {{news.author}}</h6>
                <h6 class="card-subtitle mb-2 text-muted">Дата создания: {{news.createdAt}}</h6>
                <p class="card-text">{{news.description}}</p>
                <p class="card-text">{{news.text}}</p>
                Комменты:
                {{#each news.comments}}
                    <div class="col-lg-6">
                          <div class="card">
                          {{#if this.avatar}}
                            <img
                              src='http://localhost:3000/{{this.avatar}}'
                              class="card-img-top"
                              style="height: 200px; object-fit: cover;"
                              alt=''
                            >
                            {{/if}}
                            <div class="card-body">
                              <p class="card-text">{{this.text}}</p>
                              <h6 class="card-subtitle mb-2 text-muted">
                                Автор: {{this.author}}
                              </h6>
                              <h6 class="card-subtitle mb-2 text-muted">
                                Дата создания: {{this.createdAt}}
                              </h6>
                            </div>
                          </div>
                        </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{else}}
<h1>Новость не найдена!</h1>
{{/if}}